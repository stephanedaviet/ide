<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='locale' type='com.codenvy.ide.extension.runner.client.RunnerLocalizationConstant'/>
    <ui:with field='resources' type='com.codenvy.ide.extension.runner.client.RunnerResources'/>
    <ui:style>

        .spacingTop {
            margin-top: 5px;
        }

        .labelMargin {
            margin-bottom: 5px;
        }

        .emptyBorder {
            margin: 10px;
        }

        .noResize {
            resize: none;
        }

        .gwt-ListBox {
            background-color: #4b4a4a;
            border: 1px solid #000000;
            color: #ffffff;
            position: relative;
            text-align: right;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="350px" height="280px" addStyleNames="{style.emptyBorder} {resources.runner.mainStyle}" debugId="customRun-panel">
        <g:north size="65.0">
            <g:FlowPanel addStyleNames="{style.spacingTop}">
                <g:Label text="{locale.runConfigurationViewEnvironmentLabel}" height="20px" width="100%"
                         addStyleNames="{style.labelMargin} {resources.runner.mainStyle}"/>
                <g:ListBox ui:field="environmentField" height="20px" width="100%" debugId="project-customRun-environment"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="30">
            <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
                <g:Label text="{locale.runConfigurationViewMemoryRunnerLabel}" width="284px" addStyleNames="{resources.runner.mainStyle}"/>
                <g:ListBox ui:field="memoryRunner" height="20px" width="100%" addStyleNames="{style.gwt-ListBox}"
                              debugId="project-customRun-memoryRunner"/>
            </g:HorizontalPanel>
        </g:north>
        <g:north size="30">
            <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
                <g:Label text="{locale.runConfigurationViewMemoryTotalLabel}" width="302px" addStyleNames="{resources.runner.mainStyle}"/>
                <g:TextBox readOnly="true" ui:field="memoryTotal" height="12px" width="40px" addStyleNames="{style.gwt-ListBox}"
                           debugId="project-customRun-memoryTotal"/>
            </g:HorizontalPanel>
        </g:north>
        <g:north size="30">
            <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
                <g:Label text="{locale.runConfigurationViewMemoryAvailableLabel}" width="302px" addStyleNames="{resources.runner.mainStyle}"/>
                <g:TextBox readOnly="true" ui:field="memoryAvailable" height="12px" width="40px" addStyleNames="{style.gwt-ListBox}"
                           debugId="project-customRun-memoryAvailable"/>
            </g:HorizontalPanel>
        </g:north>
        <g:north size="30">
            <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
                <g:Label text="{locale.runConfigurationViewSkipBuildLabel}" width="330px" addStyleNames="{resources.runner.mainStyle}"/>
                <g:CheckBox ui:field="skipBuild" debugId="project-customRun-skipBuild"/>
        	</g:HorizontalPanel>
        </g:north>
        <g:center>
            <g:TextArea ui:field="descriptionField" readOnly="true" width="100%" addStyleNames="{style.noResize}}"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
